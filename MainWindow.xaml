<Window x:Class="ASCII_Art_mk_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="185*"/>
            <ColumnDefinition Width="332*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="loadImage" Content="Load Image" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="122" FontFamily="Roboto Light" Click="Button_Click" Height="30" Background="White"/>
        <Label x:Name="mainLabel" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="40,84,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="109" Width="426">
            <Label.Content>
                <AccessText x:Name="mainLabelAccess" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Hello." FontFamily="Roboto Light" FontSize="35" TextAlignment="Center"></AccessText>
            </Label.Content>
        </Label>

    </Grid>
</Window>
